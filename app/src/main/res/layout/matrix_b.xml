<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridView
        android:id="@+id/gvMatrix2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:stretchMode="columnWidth"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/tvRows2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Rows"
        android:textSize="25dp"
        android:layout_below="@id/gvMatrix2"
        />
    <Spinner
        android:id="@+id/spinner2Rows"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_below="@id/gvMatrix2"
        android:layout_toRightOf="@id/tvRows2" />

    <TextView
        android:id="@+id/tvColumns2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Columns"
        android:textSize="25dp"
        android:layout_below="@id/tvRows2"
        />
    <Spinner
        android:id="@+id/spinner2Columns"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/spinner2Rows"
        android:layout_toRightOf="@+id/tvColumns2"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tvColumns2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">
        <Button
            android:id="@+id/btReset2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"/>
        <Button
            android:id="@+id/btResize2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resize"/>
    </LinearLayout>

</RelativeLayout>